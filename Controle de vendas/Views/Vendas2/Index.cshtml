@model IEnumerable<Controle_de_vendas.Models.Venda>

@{
    ViewData["Title"] = "Index";
}

<h1><strong>Vendas</strong></h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
